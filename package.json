{
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "linkedom": "^0.18.12"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.22",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "npm run build:service-worker && npm run build:sidepanel",
    "build:service-worker": "esbuild src/service_worker.ts --bundle --minify --sourcemap --outdir=dist",
    "build:sidepanel": "esbuild static/sidepanel.ts --bundle --minify --sourcemap --outfile=static/sidepanel.js",
    "typecheck": "tsc --noEmit"
  }
}
