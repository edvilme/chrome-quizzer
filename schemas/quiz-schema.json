{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "answer": {
            "type": "string"
          },
          "explanation": {
            "type": "string"
          },
          "furtherReadingSearchTerms": {
            "type": "array",
            "description": "List of search terms for further reading on this question's topic.",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["title", "options", "answer", "explanation", "furtherReadingSearchTerms"]
      }
    },
    "quizUuid": {
      "type": "string",
      "description": "A uuid for the quiz",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "quizCategory": {
      "type": "string",
      "description": "The category of the quiz. E.g., 'JavaScript', 'HTML', 'CSS', 'Web Development', 'Technology', etc."
    }
  },
  "required": ["questions", "quizUuid", "quizCategory"]
}