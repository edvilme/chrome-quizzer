{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dashboard Summary",
    "type": "object",
    "properties": {
        "summary": {
            "type": "string",
            "description": "Brief summary of all the findings from the provided answer history, along with suggestions for improvement.",
            "minLength": 50,
            "maxLength": 1000
        },
        "categories": {
            "type": "array",
            "description": "Breakdown of performance, summaries and suggestions for each quiz category.",
            "items": {
                "type": "object",
                "properties": {
                    "category": {
                        "type": "string",
                        "description": "The name of the quiz category."
                    },
                    "summary": {
                        "type": "string",
                        "description": "Summary of performance in this category.",
                        "minLength": 30,
                        "maxLength": 500
                    },
                    "suggestions": {
                        "type": "string",
                        "description": "Suggestions for improvement in this category.",
                        "minLength": 30,
                        "maxLength": 500
                    },
                    "score": {
                        "type": "number",
                        "description": "Score achieved in this category.",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "relevant_followup_searches": {
                        "type": "array",
                        "description": "List of relevant follow-up searches for further learning in this category.",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["category", "summary", "suggestions", "questions", "relevant_followup_searches"]
            }
        }
    },
    "required": ["summary", "categories"]
}