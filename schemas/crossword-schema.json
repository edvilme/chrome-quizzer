{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Crossword Puzzle Schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "clue": {
                "type": "string",
                "description": "The clue for the crossword entry."
            },
            "answer": {
                "type": "string",
                "description": "The answer to the crossword clue. Preferably a single word."
            }
        },
        "required": ["clue", "answer"]
    },
    "maxItems": 10
}