{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dashboard Summary Array",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "category": {
                "type": "string",
                "description": "The name of the quiz category. (e.g., sports, technology, astronomy, economics)"
            },
            "category_emoji": {
                "type": "string",
                "description": "An emoji representing the quiz category. Use standard Unicode emojis."
            },
            "summary": {
                "type": "string",
                "description": "Summary of performance in this category, with relevant observations and feedback.",
                "minLength": 30,
                "maxLength": 500
            },
            "suggestions": {
                "type": "array",
                "description": "Suggestions for improvement in this category.",
                "minItems": 1,
                "maxItems": 5,
                "items": {
                    "type": "string",
                    "minLength": 30,
                    "maxLength": 500
                }
            },
            "score": {
                "type": "number",
                "description": "Score achieved in this category.",
                "minimum": 0,
                "maximum": 100
            },
            "relevant_followup_searches": {
                "type": "array",
                "description": "List of relevant follow-up searches for further learning in this category.",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "category",
            "summary",
            "suggestions",
            "score",
            "relevant_followup_searches"
        ]
    }
}