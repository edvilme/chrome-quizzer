{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dashboard Summary Array",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "category": {
                "type": "string",
                "description": "The name of the quiz category."
            },
            "summary": {
                "type": "string",
                "description": "Summary of performance in this category.",
                "minLength": 30,
                "maxLength": 500
            },
            "suggestions": {
                "type": "array",
                "description": "Suggestions for improvement in this category.",
                "minItems": 1,
                "maxItems": 5,
                "items": {
                    "type": "string",
                    "minLength": 30,
                    "maxLength": 500
                }
            },
            "score": {
                "type": "number",
                "description": "Score achieved in this category.",
                "minimum": 0,
                "maximum": 100
            },
            "relevant_followup_searches": {
                "type": "array",
                "description": "List of relevant follow-up searches for further learning in this category.",
                "items": {
                    "type": "string"
                }
            },
            "questions": {
                "type": "array",
                "description": "List of questions attempted in this category.",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "category",
            "summary",
            "suggestions",
            "score",
            "relevant_followup_searches"
        ]
    }
}