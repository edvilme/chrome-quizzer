{
  "manifest_version": 3,
  "name": "Chrome Quizzer",
  "version": "0.1.0",
  "description": "Reader view and instant comprehension quizzes generated locally with Chrome's on-device LLM.",
  "action": {
    "default_title": "Click to open Quizzer",
    "default_icon": "icons/quizzer_icon_32x32.png"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "static/sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "dist/service_worker.js"
  },
  "icons": {
    "16": "icons/quizzer_icon_16x16.png",
    "32": "icons/quizzer_icon_32x32.png",
    "48": "icons/quizzer_icon_48x48.png",
    "128": "icons/quizzer_icon_128x128.png"
  }
}